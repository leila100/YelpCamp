<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit Info for <%= user.username %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/users/<%= user._id %>?_method=PUT" method="POST">
              <div class="form-group row">
                <label for="firstName" class="col-sm-4 col-form-label">First Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="firstName" name="user[firstName]" value="<%= user.firstName %>">
                </div>
              </div>
              <div class="form-group row">
                <label for="lastName" class="col-sm-4 col-form-label">Last Name</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="lastName" name="user[lastName]" value="<%= user.lastName %>">
                </div>
              </div>
              <div class="form-group row">
                <label for="avatar" class="col-sm-4 col-form-label">Avatar</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="avatar" name="user[avatar]" value="<%= user.avatar %>">
                </div>
              </div>
              <div class="form-group row">
                <label for="email" class="col-sm-4 col-form-label">Email</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="email" name="user[email]" value="<%= user.email %>">
                </div>
              </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update</button>
                </div>
            </form>
            <a href="/campgrounds">Home</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
